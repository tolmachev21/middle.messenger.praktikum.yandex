            {{> Text size="small" color="gray" text="Иван"}}
        </li>
        <li class="profile__user-field">
            {{> Text size="small" text="Телефон"}}
            {{> Text size="small" color="gray" text="+7 (909) 967 30 30"}}
        </li>
    </ul>
</main>
<footer class="profile">
    <ul class="profile__footer">
        <li class="profile__link">
            {{> Link size="big" type="default" page="updateProfile" name="updateProfile" text="Изменить данные"}}
        </li>
        <li class="profile__link">
            {{> Link size="big" type="default" page="updatePassword" name="updatePassword" text="Изменить пароль"}}
        </li>
        <li class="profile__link">
            {{> Link size="big" type="danger" page="signIn" name="signOut" text="Выйти"}}
        </li>
    </ul>
</footer>

<nav class="profile__nav">
    <a href="#" page="chats"><img class="profile__back" page="chats" src="/assets/back-link.svg" alt="Назад"></a>
</nav>

<dialog class="popup">
    <form action="#" class="popup-form">
        {{> Text text="Загрузите файл"}}
        <fieldset class="popup-form-group">
            <label class="popup-form__label" for="email">
                Выбрать файл на компьютере
            </label>
            <input
                    name="avatar"
                    class="popup-form__input"
                    type="file"
                    accept=""
            >
        </fieldset>
        <fieldset class="popup-form-group">
            {{> Button text="Поменять" page="profile" className="default" type="submit"}}
        </fieldset>
    </form>
</dialog>
